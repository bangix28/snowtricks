{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}


{% block body %}
    <div class="container">
        <h3 class="text-center p-3">Your tricks !</h3>
        <table class="table" style="margin-bottom: 150px;">

            <thead class="thead-dark">
            <tr>
                <th scope="col">User</th>
                <th scope="col">Content</th>
                <th scope="col">Post</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for trick in trick %}
                <tr>
                    <td>{{ trick.user.lastName }} {{ trick.user.firstName }}</td>
                    <td>{{ trick.content|striptags|slice(0,75) }}</td>
                    <td><a href="{{ url('post_show', {'id': trick.id}) }}">Link to the post</a></td>
                    <td class="row">
                        {{ include('post/_delete_form.html.twig') }}
                        <a href="{{ url('post_edit', {'id': trick.id}) }}">
                            <i class="fas fa-edit align-top"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if form is not null %}
            <h2>Create a new trick group</h2>
            {{ form_start(form) }}
            {{ form(form) }}
            <button type="submit" class="btn btn-success ">Add</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}
