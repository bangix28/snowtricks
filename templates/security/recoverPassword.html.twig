{% extends 'base.html.twig' %}
{% block title %}Recover password ! {% endblock %}

{% block style %}
    <link href="assets/css/recover.css" type="text/css">  {% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="mx-auto">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Forgotten password</h2>
                            <p>Change your password</p>
                            <div class="panel-body">
                                {{ form_start(form) }}
                                {{ form_row(form.plainPassword.first, {
                                    label: 'Password'
                                }) }}
                                {{ form_row(form.plainPassword.second, {
                                    label: 'Confirm your password'
                                }) }}
                                <button name="submit" class="btn btn-lg btn-primary btn-block">Replace password</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

