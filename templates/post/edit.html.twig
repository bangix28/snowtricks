{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/banner.css') }}">{% endblock %}
{% if post.images[0] is defined %}
    {% set defaultImages = 'assets/uploads/' ~ post.images[0] %}
{% else %}
    {% set defaultImages = 'assets/uploads/trickdefault.jpg' %}
{% endif %}
<div class="container">
    <div class="justify-content-center mt-5">
        <div class="card">
            <div class="banner">
                <img class="banner-img img img-fluid card-img-top" src="{{ asset(defaultImages) }}" alt="Image of tricks {{ post.name }} ">
                <div class="icon row">
                    <button class="deleteImage" value="0">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                    <a href="{{ url('post_edit', {'id' : post.id}) }}">
                        <i class="fas fa-edit align-top"></i>
                    </a>
                </div>
            </div>
            <hr>
            {{ form_start(form) }}
            <div class="col-lg-12">
                <div class="card-body">
                    <ul class="list-inline">
                        <li class="list-inline-item">by {{ post.user.firstName }}.{{ post.user.lastName }}</li> |
                        <li class="list-inline-item">Created on {{ post.createdAt|date('d/m/yy') }} |</li>
                        {% if post.modifiedAt is not null %}
                            <li class="list-inline-item"> Modify {{ post.modifiedAt|date('d/m/y') }} |</li>
                        {% endif %}
                        {{ form_row(form.groups) }}
                    </ul>
                    <hr>
                    {{ form_row(form.name) }}
                    <hr>
                    <div class="row d-none d-lg-flex load-media">
                        <div class="col-lg-6 col-md-12">
                            <div id="carousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    {% for image in post.images|slice(1) %}
                                        <div class="carousel-item {% if loop.index == 1 %}active{% endif %}" id="slide{{ loop.index }}">
                                            <div class="text-center mb-2">
                                            <button id="button" class="deleteImage" value="{{ loop.index }}">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                            <button class="replaceImage" value="{{ loop.index }}">
                                                <i class="fas fa-edit align-top"></i>
                                            </button>
                                                <div id="test"></div>
                                                <div class="form.{{ loop.index}}"></div>
                                            </div>
                                            <img class="card-img img img-fluid rounded" src="{{ asset('assets/uploads/' ~ image) }}" alt="First slide">
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <!-- Second Caroussel -->
                        <div class="col-lg-6 col-md-12">
                            <div id="carousel_v" class="carousel slide" data-ride="carousel_v">
                                <div class="carousel-inner">
                                    {% for video in post.video %}
                                        <div class="carousel-item {% if loop.index == 1 %}active{% endif %}" id="slide{{ loop.index }}" style="height: 450px">
                                            <div class="text-center mb-2">
                                                <button id="button" class="deleteVideo" value="{{ loop.index }}">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                                <button class="replaceImage" value="{{ loop.index }}">
                                                    <i class="fas fa-edit align-top"></i>
                                                </button>
                                            <iframe width="100%" height="100%" src="{{ video }}"
                                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen class="rounded" ></iframe>
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carousel_v" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel_v" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    </div>
                </div>
                    {{ include('post/_add_media_form.html.twig') }}
                    <h4 class="card-title">Description of tricks</h4>
                    {{ form_row(form.content) }}
                    <div class="text-center">
                        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                    </div>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
     $(document).ready(function () {

         $(".deleteImage").click(function () {
             let image = this.value;
             $.ajax({
                 url: "{{ url('image_delete') }}",
                 type: 'POST',
                 data: {id_image: image, id: "{{ post.id }}", type: 'image'}
             })
         });
         $(".deleteVideo").click(function () {
             let video = this.value;
             $.ajax({
                 url: "{{ url('image_delete') }}",
                 type: 'POST',
                 data: {id_video: video, id: "{{ post.id }}", type: 'video'}
             })
         });
     })
   </script>
    <script src="{{ asset('assets/js/tinyMce.js') }}"></script>
    <script src="{{ asset('assets/js/prototype.js') }}"></script>
{% endblock %}
