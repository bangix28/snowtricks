{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/banner.css') }}">{% endblock %}
{% if post.images[0] is defined %}
    {% set defaultImages = 'assets/uploads/' ~ post.images[0] %}
{% else %}
    {% set defaultImages = 'assets/uploads/trickdefault.jpg' %}
{% endif %}
{% block title %}Post{% endblock %}

{% block body %}
    <div class="container">
        <div class="justify-content-center mt-5">
            <div class="card">
            <div class="banner">
                <img class="banner-img img img-fluid card-img-top" src="{{ asset(defaultImages) }}" alt="Image du tricks {{ post.name }} ">
                <div class="icon row">
                    {{ include('post/_delete_form.html.twig') }}
                    <a href="{{ url('post_edit', {'id' : post.id}) }}">
                        <i class="fas fa-edit align-top"></i>
                    </a>
                </div>
            </div>
            <hr>
        <div class="col-lg-12">
            <div class="card-body">
                <ul class="list-inline">
                    <li class="list-inline-item">par {{ post.user.firstName }}.{{ post.user.lastName }}</li> |
                    <li class="list-inline-item">Crée le {{ post.createdAt|date('d/m/yy') }} |</li>
                    {% if post.modifiedAt is not null %}
                        <li class="list-inline-item">Modifier le {{ post.modifiedAt|date('d/m/y') }} |</li>
                    {% endif %}
                    <li class="list-inline-item">Catégorie : {{ post.groups }}</li>
                </ul>
                <hr>
                <h4 class="card-title">{{ post.name }}</h4>
                <hr>
                <div class="row d-none d-lg-flex load-media">
                    <div class="col-lg-6 col-md-12">
                    <div id="carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for image in post.images|slice(1) %}
                            <div class="carousel-item {% if loop.index == 1 %}active{% endif %}" id="slide{{ loop.index }}">
                                <img class="card-img img img-fluid rounded" src="{{ asset('assets/uploads/' ~ image) }}" alt="First slide">
                            </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    </div>
                    <!-- Second Caroussel -->
                    <div class="col-lg-6 col-md-12">
                        <div id="carousel_v" class="carousel slide" data-ride="carousel_v">
                            <div class="carousel-inner">
                                {% for video in post.video %}
                                    <div class="carousel-item {% if loop.index == 1 %}active{% endif %}" id="slide{{ loop.index }}" style="height: 450px">
                                        <iframe width="100%" height="100%" src="{{ video }}"
                                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                allowfullscreen class="rounded" ></iframe>
                                    </div>
                                {% endfor %}
                            </div>
                            <a class="carousel-control-prev" href="#carousel_v" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel_v" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <h4 class="card-title">Description du tricks</h4>
                <p class="card-text text-jusitfy">{{ post.content|raw }}</p>
            </div>
        </div>
        </div>
            </div>
            <hr>
            {% if form %}

                {{ form_start(form) }}
                <div class="row justify-content-center">
                    <div class="col-lg-6 ">
                {{ form_widget(form.content) }}
                    </div>
                <button type="submit" class="btn btn-success">Envoyer</button>
                </div>
                {{ form_end(form) }}
                <hr>
            {% endif %}
             {% for c in post.comment %}
            <div class="justify-content-center my-2 row">
                <img src="{{ asset('assets/uploads/'~ c.user.image) }}"  class="img img-fluid col-lg-1">
                <div class="border rounded col-lg-7">
                    <p class="small">{{ c.user.firstName }}.{{ c.user.lastName }} le {{ c.createdAt|date('d/m/y') }} à {{ c.createdAt|date('H:i') }}</p>
                    <p>{{ c.content }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script>
        $('.carousel').carousel();
        $('.carousel.v').carousel()
    </script>
    <script>

    </script>

{% endblock %}
